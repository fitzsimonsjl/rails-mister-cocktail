 <div class="show-container">

 <h1><%= @cocktail.name %></h1>

<div class="show-back-to-cocktails">
 <%= link_to "Back to all cocktails", root_path, class: "btn btn-success"%>
 </div>
 <br>

     <h3>Recipe - Enter your own and be creative! <i class="fas fa-arrow-down"></i></h3>
  <br>

     <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

     </div>

     <br>


     <table class="table table-bordered">
       <body>
           <th>Ingredient</th>
           <th>Description</th>
           <th>Delete? (if applicable)</th>
         <% @cocktail.doses.each do |dose| %>
           <tr>
             <td><%= dose.ingredient.name %></td>
             <td><%= dose.description %></td>
             <td>
               <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
             </td>
           </tr>
         <% end %>

         <br>
         <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
     </table>
</<%=>
