<nav class="navbar sticky-top navbar-light bg-light">
  <a class="navbar-brand" href="#">
    <%= image_tag "martini-icon.jpg", alt: "alttext", width: "33", height: "33", class: "d-inline-block align-top"  %>
    The Cocktail Book
    <%= link_to "+ Add a new Cocktail",  new_cocktail_path, class: "btn btn-primary"%>
  </a>
</nav>

<br>
<br>
<h5 style="text-align: center;"> <%= "#{@cocktails.count} cocktails added so far. Why not add another?" %>  </h5>
<br>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
        <div class="card mr-1 mb-3 mt-3">
          <%= cl_image_tag cocktail.photo, alt: "alttext", class: "card-img-top" %>

        <div class="card-body">
          <h6 class="card-title"> <%= cocktail.name %></h6>
          <%= link_to "View cocktail", cocktail, class: "btn btn-secondary"%>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>


