<div class="new-cocktail-btn">
<%= link_to "+ Add a new Cocktail",  new_cocktail_path, class: "btn btn-primary"%>
    </div>

<br>
<br>
<% if !@search.present? %>
<h5 style="text-align: center;"> <%= "#{@cocktails.count} cocktails added so far. Why not add another?" %>  </h5>
<% else %>
<h5 style="text-align: center;"> <%= "#{@cocktails.count} cocktail found for your search '#{@name}'" %>  </h5>
<div class="search-back-to-cocktails">
 <%= link_to "Back to all cocktails", root_path, class: "btn btn-success"%>
 </div>
<% end %>
<br>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
        <div class="card mr-1 mb-3 mt-3">
          <%= cl_image_tag cocktail.photo, alt: "alttext", class: "card-img-top" %>

        <div class="card-body">
          <h6 class="card-title"> <%= cocktail.name %></h6>
          <div class="card-button"> <%= link_to "View cocktail", cocktail, class: "btn btn-secondary"%> </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>


